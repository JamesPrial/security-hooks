{
  "description": "Security hooks for detecting secrets before git commit",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check_secrets.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
